 "doctype": "Print Format",
 "font": "Default",
 "html": "<style>\n\t.print-format table, .print-format tr, \n\t.print-format td, .print-format div, .print-format p, .print-format b {\n\t\tfont-family: Tahoma;\n\t\tline-height: 100%;\n\t\tvertical-align: middle;\n\t}\n\t@media screen {\n\t\t.print-format {\n\t\t\twidth: 8.3in;\n\t\t\tpadding: 0.20in;\n\t\t\tmin-height: 11.7in;\n\t\t\t\n\t\t}\n\t}\n\t\n\n</style>\n\n<div class=\"rf-font-size\">\n    {% if doc.is_customer_statement == 0 %}\n        {% if letter_head %}\n            {{ letter_head }}\n        {% endif %}\n        \n        {% set dist_cust_curr = get_customer_and_currency(doc.company, doc.employee, doc.from_date, doc.to_date) %}\n        \n        {% for cust_id in dist_cust_curr %}\n            \n            <h5 class=\"text-center p-3\">STATEMENT OF OUTSTANDING INVOICES</h5>\n            <table style=\"font-size:12px; font-family: Tahoma; width:80%;\">\n                <tr>\n                    <td class=\"text-left\">Customer :</td>\n                    <td class=\"text-right\">{{ cust_id.customer }}</td>\n                    <td></td>\n                    <td class=\"text-left\">Sales Person:</td>\n                    <td class=\"text-left\">{{ doc.employee_name }}</td>\n                </tr>\n                <tr>\n                    <td class=\"text-left\">Customer Name:</td>\n                    <td class=\"text-right\">{{ cust_id.customer_name }}</td>\n                    <td></td>\n                    <td class=\"text-left\">Statement Period :</td>\n                    <td class=\"text-left\">{{ frappe.format(doc.from_date, {'fieldtype': 'Date'}) }} To {{ frappe.format(doc.to_date, {'fieldtype': 'Date'}) }}</td>\n                </tr>\n\n            </table>\n            <div class=\"p-2\"></div>\n            \n            <div class=\"page-break\">\n                {% if doc.include_statement == 1 %}\n                \n                    {% set curr = namespace(value='USD') %}\n                    \n                    {% set customer_invoices = get_customer_statement_by_currency(doc.company,doc.employee,doc.from_date,doc.to_date,curr.value,cust_id.customer) %}\n                    \n                    {% if customer_invoices|length %}\n                        <table style=\"width:100%; font-size:10px; padding-top:5px;\" border=\"1\">\n                        <thead>\n                            <tr>\n                                <th>Date</th>\n                                <th>Voucher No</th>\n                                <th>Currency</th>\n                                <th>Grand Total</th>\n                                <th>Outstanding</th>\n                                <th>Status</th>\n                                <th>Due Date</th>\n                            </tr>\n                        </thead>\n                        <tbody>\n                        {% set bal = namespace(value=0)%}\n                        \n                        {% for d in customer_invoices %}\n                            \n                            {% set bal.value=bal.value +(d.outstanding_amount) %}\n                            <tr>\n                                <td>{{ frappe.format(d.posting_date, {'fieldtype': 'Date'}) }}</td>\n                                <td>{{ d.name }}</td>\n                                <td>{{ d.currency }}</td>\n                                <td>{{ frappe.utils.fmt_money(d.grand_total) }}</td>\n                                <td>{{ frappe.utils.fmt_money(d.outstanding_amount) }}</td>\n                                <td>{{ d.status }}</td>\n                                <td>{{ d.due_date }}</td>\n                            </tr>\n                        {% endfor%}\n                        <tr style=\"border: 1px solid black;\">\n                            <th colspan=\"4\" style=\"font-weight:bold:\">Closing Outstanding In {{curr.value}} </th>\n                            <th style=\"font-weight:bold:\">{{ frappe.utils.fmt_money(bal.value) }}</th>\n                            <th style=\"font-weight:bold:\"></th>\n                            <th style=\"font-weight:bold:\"></th>\n                        </tr>\n                        </tbody>\n                    </table>\n                    {% endif %}\n                    <div class=\"p-2\"></div>\n                    \n                    {% set curr = namespace(value='IQD') %}\n                    \n                    {% set customer_invoices = get_customer_statement_by_currency(doc.company,doc.employee,doc.from_date,doc.to_date,curr.value,cust_id.customer) %}\n                    {% if customer_invoices|length %}\n                        <table style=\"width:100%; font-size:10px; padding-top:5px;\" border=\"1\">\n                        <thead>\n                            <tr>\n                                <th>Date</th>\n                                <th>Voucher No</th>\n                                <th>Currency</th>\n                                <th>Grand Total</th>\n                                <th>Outstanding</th>\n                                <th>Status</th>\n                                <th>Due Date</th>\n                            </tr>\n                        </thead>\n                        <tbody>\n                        {% set bal = namespace(value=0)%}\n                        \n                        {% for d in customer_invoices %}\n                            \n                            {% set bal.value=bal.value +(d.outstanding_amount) %}\n                            <tr>\n                                <td>{{ frappe.format(d.posting_date, {'fieldtype': 'Date'}) }}</td>\n                                <td>{{ d.name }}</td>\n                                <td>{{ d.currency }}</td>\n                                <td>{{ frappe.utils.fmt_money(d.grand_total) }}</td>\n                                <td>{{ frappe.utils.fmt_money(d.outstanding_amount) }}</td>\n                                <td>{{ d.status }}</td>\n                                <td>{{ d.due_date }}</td>\n                            </tr>\n                        {% endfor%}\n                        <tr style=\"border: 1px solid black;\">\n                            <th colspan=\"4\" style=\"font-weight:bold:\">Closing Outstanding In {{curr.value}} </th>\n                            <th style=\"font-weight:bold:\">{{ frappe.utils.fmt_money(bal.value) }}</th>\n                            <th style=\"font-weight:bold:\"></th>\n                            <th style=\"font-weight:bold:\"></th>\n                        </tr>\n                        </tbody>\n                    </table>\n                    {% endif %}\n                    <div class=\"p-2\"></div>\n                {% endif %}\n            </div>\n            \n        {% endfor%}\n        \n        <div class=\"p-2\"></div>\n    {% endif %}\n</div>",
