 "html": "\n<div>\n    \n    <div class=\"row\">\n        <div class=\"col-xs-6\">\n            <div style = \"float:left\">\n                <img src=\"/private/files/Logo_%20Black%202.jpg\" style=\"width: 50%;\">\n            </div>\n        </div>\n        <div class=\"col-xs-6\">\n            <div style = \"float:right; font-size:20px; padding-top: 30px;\">\n                <strong>{{ _(\"Sales Invoice\") }}</strong>\n                <br>\n                <strong>{{ doc.name }}</strong>\n            </div>\n        </div>\n            \n    </div>\n    <hr>\n    <div class=\"row\">\n        <div class=\"col-xs-6\">\n            <table>\n                <tr>\n                    <td>{{ _(\"Customer Code\") }} </td>\n                    <td>{{ _(doc.customer)}}</td>\n                </tr>\n                <tr>\n                    <td>{{ _(\"Customer Name\") }} </td>\n                    <td>{{ _(doc.customer_name)}}</td>\n                </tr>\n                \n                {% if doc.contact_mobile %}\n                    <tr>\n                        <td>{{ _(\"Mobile No\") }}</td>\n                        <td>{{ _(doc.contact_mobile)}}</td>\n                    </tr>\n                {% endif %}\n            </table>\n        </div>\n        \n        <div class=\"col-xs-6\">\n            <table>\n                <tr>\n                    <td>{{ _(\"Company\") }}</td>\n                    <td>{{ _(doc.company)}}</td>\n                </tr>\n                <tr>\n                    <td> {{ _(\"Date\") }}</td>\n                    <td>{{ doc.posting_date }}</td>\n                </tr>\n\n                <tr>\n                    <td> {{ _(\"Currency\") }}</td>\n                    <td>{{ doc.currency }}</td>\n                </tr>\n            </table>\n        </div>\n    </div>\n    <div class=\"mt-3\">\n        <table class=\"table table-bordered table-condensed\">\n            <tr>\n                <th>{{ _(\"SL.No\") }}</th>\n                <th>{{ _(\"Item Code\") }}</th>\n                <th>{{ _(\"Brand\") }}</th>\n                <th>{{ _(\"Arabic Name\") }}</th>\n                <th>{{ _(\"Barcode\") }}</th>\n                <th>{{ _(\"Quantity\") }}</th>\n                <th>{{ _(\"Price List Rate\") }}</th>\n                <th>{{ _(\"Discount Amount\") }}</th>\n                <th>{{ _(\"Net Rate\") }}</th>\n                <th>{{ _(\"Net Amount\") }}</th>\n                <th>{{ _(\"UOM Conversion Factor\") }}</th>\n            </tr>\n            {% for d in doc.items %}\n                <tr>\n                    <td>{{ loop.index }}</td>\n                    <td>{{ d.item_code}}</td>\n                    <td>{{ d.brand_code}}</td>\n                    <td>{{ d.item_arabic_name}}</td>\n                    <td>{{ d.barcode}}</td>\n                    <td>{{ d.qty}}</td>\n                    <td>{{ d.price_list_rate}}</td>\n                    <td>{{ d.discount_amount}}</td>\n                    <td>{{ d.net_rate}}</td>\n                    <td>{{ d.net_amount}}</td>\n                    <td>{{ d.conversion_factor}}</td>\n                </tr>\n            {% endfor%}\n        </table>\n    </div>\n   \n    <div class=\"mt-3\">\n        <table>\n            <tr>\n                <td></td>\n            </tr>\n        </table>\n    </div>\n    <div class=\"row\">\n        <div class=\"col-xs-6\"></div>\n        {% set line_total = get_line_total_disc(doc.name) %}\n        {% set gross_total = get_gross_total_amt(doc.name) %}\n        <div class=\"col-xs-6\">\n            <table>\n                <tr><td><strong>{{ _(\"Total\") }} :</strong></td><td>{{ gross_total}}</td></tr>\n                <tr><td><strong>{{ _(\"Discount Amount\") }}: </strong></td><td>{{ line_total }}</td></tr>\n                <tr><td><strong>{{ _(\"Additional Discount\") }}: </strong></td><td>{{ doc.discount_amount }}</td></tr>\n                <tr><td><strong>{{ _(\"Taxes and Charges\") }}: </strong></td><td>{{ doc.total_taxes_and_charges }}</td></tr>\n                <tr><td><strong>{{ _(\"Net Total\") }}: </strong></td><td>{{ doc.grand_total }}</td></tr>\n            </table>\n        </div>\n    </div>\n    <div class=\"mt-3\">\n        <table>\n            <tr>\n                <td>{{ _(\"Total Payable Amount\") }} : {{ doc.grand_total }}</td>\n            </tr>\n        </table>\n    </div>\n</div>",
