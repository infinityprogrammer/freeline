 "html": "<style>\n\t.print-format table, .print-format tr, \n\t.print-format td, .print-format div, .print-format p, .print-format b {\n\t\tfont-family: Tahoma;\n\t\tline-height: 100%;\n\t\tvertical-align: middle;\n\t}\n\t@media screen {\n\t\t.print-format {\n\t\t\twidth: 8.3in;\n\t\t\tpadding: 0.20in;\n\t\t\tmin-height: 11.7in;\n\t\t\t\n\t\t}\n\t}\n\t\n\n</style>\n<div>\n    \n    <div class=\"row\" style=\"border-bottom: 1px solid black;\">\n        <div class=\"col-xs-6\">\n            <div style = \"float:left\">\n                <img class=\"rf-margin\" src=\"/private/files/Tiejan%20Logo_%20Black%202.jpg\" style=\"width: 58%;\">\n            </div>\n        </div>\n        <div class=\"col-xs-6\">\n            <div style = \"float:right; font-size:20px; padding-top: 65px;\">\n                <strong>{{ _(\"SALES INVOICE\") }}</strong>\n                <br>\n                <strong>{{ doc.name }}</strong>\n            </div>\n        </div>\n            \n    </div>\n   \n    <div class=\"row mt-3\">\n        <div class=\"col-xs-6\">\n            <table>\n                <tr>\n                    <td>{{ _(\"Customer Code\") }} </td>\n                    <td>{{ _(doc.customer)}}</td>\n                </tr>\n                <tr>\n                    <td>{{ _(\"Customer Name\") }} </td>\n                    <td>{{ _(doc.customer_name)}}</td>\n                </tr>\n                \n                {% if doc.contact_mobile %}\n                    <tr>\n                        <td>{{ _(\"Mobile No\") }}</td>\n                        <td>{{ _(doc.contact_mobile)}}</td>\n                    </tr>\n                {% endif %}\n            </table>\n        </div>\n        \n        <div class=\"col-xs-6\">\n            <table>\n                <tr>\n                    <td>{{ _(\"Company\") }}</td>\n                    <td>{{ _(doc.company)}}</td>\n                </tr>\n                <tr>\n                    <td> {{ _(\"Date\") }}</td>\n                    <td>{{ doc.posting_date }}</td>\n                </tr>\n\n                <tr>\n                    <td> {{ _(\"Currency\") }}</td>\n                    <td>{{ doc.currency }}</td>\n                </tr>\n            </table>\n        </div>\n    </div>\n    <div class=\"mt-3\">\n        <table class=\"table table-bordered table-condensed\" id=\"items\">\n            <tr>\n                <th>{{ _(\"SL.No\") }}</th>\n                <th>{{ _(\"Item Code\") }}</th>\n                <th>{{ _(\"Brand\") }}</th>\n                <th>{{ _(\"Item Name\") }}</th>\n                <th>{{ _(\"Barcode\") }}</th>\n                <th>{{ _(\"Quantity\") }}</th>\n                <th>{{ _(\"UOM\") }}</th>\n                <th>{{ _(\"Price List Rate\") }}</th>\n                <th>{{ _(\"Discount Amount\") }}</th>\n                <th>{{ _(\"Net Rate\") }}</th>\n                <th>{{ _(\"Net Amount\") }}</th>\n                <th>{{ _(\"UOM Conversion Factor\") }}</th>\n            </tr>\n            {% for d in doc.items %}\n                <tr>\n                    <td>{{ loop.index }}</td>\n                    <td>{{ d.item_code | replace(\"SI-\", \"\") }}</td>\n                    <td>{{ d.brand_code}}</td>\n                    <td>{{ d.item_name}}</td>\n                    <td>{{ d.barcode}}</td>\n                    <td>{{ d.qty}}</td>\n                    <td>{{ d.uom}}</td>\n                    <td>{{ d.price_list_rate}}</td>\n                    <td>{{ d.discount_amount}}</td>\n                    <td>{{ d.net_rate}}</td>\n                    <td>{{ d.net_amount}}</td>\n                    <td>{{ d.conversion_factor}}</td>\n                </tr>\n            {% endfor%}\n        </table>\n    </div>\n   \n    <div class=\"mt-3\">\n        <table>\n            <tr>\n                <td></td>\n            </tr>\n        </table>\n    </div>\n    <div class=\"row\">\n        \n        {% set line_total = get_line_total_disc(doc.name) %}\n        {% set gross_total = get_gross_total_amt(doc.name) %}\n        <div class=\"col-xs-6\">\n            <table>\n                <tr><td><strong>{{ _(\"Total\") }} </strong></td><td>: {{ gross_total}}</td></tr>\n                <tr><td><strong>{{ _(\"Discount Amount\") }} </strong></td><td>: {{ line_total }}</td></tr>\n                <tr><td><strong>{{ _(\"Additional Discount\") }} </strong></td><td>: {{ doc.discount_amount }}</td></tr>\n                <tr><td><strong>{{ _(\"Taxes and Charges\") }} </strong></td><td>: {{ doc.total_taxes_and_charges }}</td></tr>\n                <tr><td><strong>{{ _(\"Net Total\") }} </strong></td><td>: {{ doc.grand_total }}</td></tr>\n            </table>\n        </div>\n        <div class=\"col-xs-6\"></div>\n    </div>\n    <div class=\"mt-3\">\n        <table>\n            <tr>\n                <td><strong>{{ _(\"Total Payable Amount\") }} : {{ doc.grand_total }}</strong></td>\n            </tr>\n        </table>\n    </div>\n</div>",
