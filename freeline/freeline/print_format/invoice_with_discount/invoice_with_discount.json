 "html": "{%- from \"templates/print_formats/standard_macros.html\" import add_header -%}\n<div>\n    \n    {%- if not doc.get(\"print_heading\") and not doc.get(\"select_print_heading\")\n        and doc.set(\"select_print_heading\", _(\"Sales Invoice \")) -%}{%- endif -%}\n    {{ add_header(0, 1, doc, letter_head, no_letterhead, print_settings) }}\n    \n    <div class=\"row\">\n        <div class=\"col-xs-6\">\n            <table>\n                <tr>\n                    <td>{{ _(\"Customer Code\") }} </td>\n                    <td>{{ _(doc.customer)}}</td>\n                </tr>\n                <tr>\n                    <td>{{ _(\"Customer Name\") }} </td>\n                    <td>{{ _(doc.customer_name)}}</td>\n                </tr>\n                \n                {% if doc.contact_mobile %}\n                    <tr>\n                        <td>{{ _(\"Mobile No\") }}</td>\n                        <td>{{ _(doc.contact_mobile)}}</td>\n                    </tr>\n                {% endif %}\n            </table>\n        </div>\n        \n        <div class=\"col-xs-6\">\n            <table>\n                <tr>\n                    <td>{{ _(\"Company\") }}</td>\n                    <td>{{ _(doc.company)}}</td>\n                </tr>\n                <tr>\n                    <td> {{ _(\"Date\") }}</td>\n                    <td>{{ doc.posting_date }}</td>\n                </tr>\n\n                <tr>\n                    <td> {{ _(\"Currency\") }}</td>\n                    <td>{{ doc.currency }}</td>\n                </tr>\n            </table>\n        </div>\n    </div>\n    <div class=\"mt-3\">\n        <table class=\"table table-bordered table-condensed\">\n            <tr>\n                <th>SL No</th>\n                <th>Item Code</th>\n                <th>Brand Code</th>\n                <th>Item Arabic name</th>\n                <th>Barcode</th>\n                <th>Qty</th>\n                <th>Price List Rate</th>\n                <th>Discount Amount</th>\n                <th>Net Rate</th>\n                <th>Net Amount</th>\n                <th>UOM Conversion Factor</th>\n            </tr>\n            {% for d in doc.items %}\n                <tr>\n                    <td>{{ loop.index }}</td>\n                    <td>{{ d.item_code}}</td>\n                    <td>{{ d.brand_code}}</td>\n                    <td>{{ d.item_arabic_name}}</td>\n                    <td>{{ d.barcode}}</td>\n                    <td>{{ d.qty}}</td>\n                    <td>{{ d.price_list_rate}}</td>\n                    <td>{{ d.discount_amount}}</td>\n                    <td>{{ d.net_rate}}</td>\n                    <td>{{ d.net_amount}}</td>\n                    <td>{{ d.conversion_factor}}</td>\n                </tr>\n            {% endfor%}\n        </table>\n    </div>\n   \n    <div class=\"mt-3\">\n        <table>\n            <tr>\n                <td></td>\n            </tr>\n        </table>\n    </div>\n    <div class=\"row\">\n        <div class=\"col-xs-6\"></div>\n        {% set line_total = get_line_total_disc(doc.name) %}\n        {% set gross_total = get_gross_total_amt(doc.name) %}\n        <div class=\"col-xs-6\">\n            <table>\n                <tr><td><strong>Gross Total :</strong></td><td>{{ gross_total}}</td></tr>\n                <tr><td><strong>Line Discount Total: </strong></td><td>{{ line_total }}</td></tr>\n                <tr><td><strong>Additional Discount: </strong></td><td>{{ doc.discount_amount }}</td></tr>\n                <tr><td><strong>Taxes and Charges: </strong></td><td>{{ doc.total_taxes_and_charges }}</td></tr>\n                <tr><td><strong>Net Total: </strong></td><td>{{ doc.grand_total }}</td></tr>\n            </table>\n        </div>\n    </div>\n    <div class=\"mt-3\">\n        <table>\n            <tr>\n                <td>Net Payable Amount : {{ doc.grand_total }}</td>\n            </tr>\n        </table>\n    </div>\n</div>",
